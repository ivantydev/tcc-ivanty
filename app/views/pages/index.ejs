<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap');
    </style>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/normalize.css">
    <link href='https://fonts.googleapis.com/css?family=Playfair Display' rel='stylesheet'>
    <title>Ivanty</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/menu.css">
    <link rel="stylesheet" href="css/headerPC.css">
    <link rel="stylesheet" href="css/globalPC.css">
    <link rel="stylesheet" href="css/carousel.css">
    <link rel="stylesheet" href="css/categories.css">
    <!-- <link href="./css/Obras.css" rel="stylesheet"> -->
</head>
<body>
    <% if (successMessage) { %>
        <div class="success-message">
            <alert><%= successMessage %></alert>
        </div>
    <% } %>
    <section class="telasPequenas">
        <%- include("../partial/header") %>
        <main>
            <img src="images/banner.png" alt="Despertando a arte que há em você" class="banner">
            <section class="obrasEmDestaque">
                <h1 class="comprarArteOnlineH1">COMPRE OBRAS DE ARTE</h1>
                <p class="comprarArteOnlineP">Navegue pelas obras de arte disponíveis em nossa plataforma</p>
                <section class="categoriasEmDestaque">
                    <h2 class="categoriasEmDestaqueText">Categorias em Destaque:</h2>
                    <%- include("../partial/comprarPorCategoriaCarouselMobile") %>
                </section>
            </section>
            <section class="artistasEmDestaque">
                <h2 class="artistasEmDestaqueTextPC">Artistas em Destaque:</h2>
                <section class="carrosell">
                    <% artistas.forEach(artista => { %>
                        <a href="/<%= artista.perfil_cliente %>">
                            <section class="artist">
                                <img src="/uploads/<%= artista.foto_cliente %>" alt="<%= artista.nome_cliente %>" class="artistPhoto">
                                <p class="artistName"><%= artista.nome_cliente %></p>
                            </section>
                        </a>
                    <% }); %>
                </section>
            </section>
            <section class="EstilosDeObraArte">
                <h1 class="comprarArteOnlineH1">COMPRE ARTE PELO ESTILO</h1>
                <p class="comprarArteOnlineP">Qual seu movimento artistico favorito?</p>
                <section class="categoriasEmDestaque">
                    <h2 class="categoriasEmDestaqueText">Categorias em Destaque:</h2>
                    <%- include("../partial/comprarPorEstiloCarouselMobile") %> 
                </section>
            </section>
        </main>
    </section>

    <section class="telasGrandes">
        <%- include("../partial/headerPC") %>
        <img src="images/banner.png" alt="" class="bannerPC">
        <main>
            <section class="obrasEmDestaquePC">
                <h1 class="comprarArteOnlineH1">COMPRE OBRAS DE ARTE</h1>
                <p class="comprarArteOnlineP">Navegue pelas obras de arte disponíveis em nossa plataforma</p>
                <section class="categoriasEmDestaquePC">
                     <%- include("../partial/comprarPorCategoriaCarousel") %>
                </section>
            </section>
            <section class="artistasEmDestaquePC">
                <h2 class="artistasEmDestaqueTextPC">Artistas em Destaque:</h2>
                <section class="carrosellPC">
                    <% artistas.forEach(artista => { %>
                        <a href="/<%= artista.perfil_cliente %>">
                            <section class="artist">
                                <img src="/uploads/<%= artista.foto_cliente %>" alt="<%= artista.nome_cliente %>" class="artistPhoto">
                                <p class="artistName"><%= artista.nome_cliente %></p>
                            </section>
                        </a>
                    <% }); %>
                </section>
            </section>
            <section class="EstilosDeObraArtePC">
                <h1 class="comprarArteOnlineH1">COMPRE ARTE PELO ESTILO</h1>
                <p class="comprarArteOnlineP">Qual seu movimento artistico favorito?</p>
                <section class="categoriasEmDestaquePC">
                    <%- include("../partial/comprarPorEstiloCarousel") %> 
                </section>
            </section>
            <section class="publicidade">
                <img src="images/garotaPintandoIvanty.png" alt="" class="publicidadeImagem">
                <h2 class="publicadeTexto">Aqui a sua arte tem VALOR</h2>
            </section>
            
        </main>
    </section>

    <%- include("../partial/footer") %>

    <script src="js/comprarPorCategoriacarousel.js"></script>
    <script src="js/comprarPorEstilocarousel.js"></script>
    <script src="js/comprarPorEstilocarouselMobile.js"></script>
    <script src="js/comprarPorCategoriacarouselMobile.js"></script>
    <script src="js/ObrasMaisVendidas.js"></script>
    <script src="js/ObrasMaisVendidasMobile.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="./js/Obra.js"></script>
</body>
</html>
