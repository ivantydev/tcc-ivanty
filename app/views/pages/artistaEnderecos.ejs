<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Ivanty</title>
  <link rel="stylesheet" href="css/global.css">
  <link rel="stylesheet" href="css/header.css">
  <link rel="stylesheet" href="css/footer.css">
  <link rel="stylesheet" href="css/menu.css">
  <link rel="stylesheet" href="css/headerPC.css">
  <link rel="stylesheet" href="css/globalPC.css">
  <link rel="stylesheet" href="css/carrosell.css">
  <link rel="stylesheet" href="css/carousel.css">
  <link rel="stylesheet" href="css/perfil.css">
  <link rel="stylesheet" href="css/perfilMobile.css">
  <link rel="stylesheet" href="css/edit.css">
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
  <style>
    p {
      color: #000;
      margin-bottom: 0.3rem;
    }

    h5 {
      color: #000;
      font-size: 1.3rem;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>

  <!-- Telas Pequenas -->
  <section class="telasPequenas">
    <%- include("../partial/header") %>

    <section class="perfil-usuario">
      <section class="container-perfil">
        <section class="enter-perfil" style="background-image: url('images/sky.jpg');">
          <section class="shadow"></section>
          <section class="avatar-perfil">
            <img src="./uploads/<%= cliente.foto %>" alt="">
            <a href="#" class="takePicture" id="openUploadModalMobile">
              <i class="fas fa-camera"></i>
            </a>
          </section>
          <section class="date-perfil">
            <% if (!isLoggedIn) { %>
              <a href="/login" class="login">Login</a>
            <% } else { %>
              <h4 class="titulo-usuario"><%= cliente.nome %></h4>
              <p class="bio-usuario">@<%= cliente.perfil %></p>
            <% } %>
          </section>
        </section>

        <section class="menu-perfil">
          <ul>
            <li><a href="/profile"><i class="icon-perfil fas fa-person"></i> Voltar ao perfil</a></li>
            <li><a href="/logout"><i class="icon-perfil bx bx-exit"></i> Logout</a></li>
          </ul>
        </section>

        <section class="endereco-container" style="padding:1rem; margin:1.5rem; border-radius: 5px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
          <h5>Endereço cadastrado</h5>
          <p><strong>CEP:</strong> <%= endereco.cep %></p>
          <p><strong>Número:</strong> <%= endereco.numero %></p>
          <p><strong>Complemento:</strong> <%= endereco.complemento %></p>
          </section>
        </section>


      </section>
    </section>
  </section>

  <!-- Telas Grandes -->
  <section class="telasGrandes">
    <%- include("../partial/headerPC") %>

    <main class="mainTelasGrandes">
        <section class="perfil-usuario">
            <section class="container-perfil">
                <section class="enter-perfil" style="background-image: url('images/sky.jpg');">
                    <section class="shadow"></section>
                    <section class="avatar-perfil">
                        <img src="./uploads/<%= cliente.foto %>" alt="">
                        <a href="#" class="takePicture" id="openUploadModal"></a>
                    </section>
                    <section class="date-perfil">
                        <% if (!isLoggedIn) { %>
                            <a href="/login" class="login">Login</a>
                        <% } else { %>
                            <h4 class="titulo-usuario"><%= cliente.nome %></h4>
                            <p class="bio-usuario">@<%= cliente.perfil %></p>
                        <% } %>
                    </section>
                </section>

                <section class="menu-perfil">
                    <ul>
                        <li><a href="/profile"><i class="icon-perfil fas fa-person"></i> Voltar para perfil</a></li>
                        <li><a href="/logout"><i class="icon-perfil bx bx-exit"></i> Logout</a></li>
                    </ul>
                </section>

                <section class="endereco-containerPC" style="padding:1rem; margin: 100px auto 0; border-radius: 5px; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;">
                  <h5>Endereço cadastrado</h5>
                  <p><strong>CEP:</strong> <%= endereco.cep %></p>
                    <p><strong>Número:</strong> <%= endereco.numero %></p>
                    <p><strong>Complemento:</strong> <%= endereco.complemento %></p>
                    <p><strong>Tipo:</strong> <%= endereco.tipo %></p>
                </section>
            </section>
            <!-- Adicione um atributo data-id ao formulário para capturar o ID do endereço -->
            <form id="form-endereco" data-id="<%= endereco.id %>">
              <input type="hidden" name="id_endereco" value="<%= endereco.id %>">
              <input type="hidden" name="id_cliente" value="<%= cliente.id %>"> <!-- Adicione este campo oculto -->
              <div class="form-group">
                <label for="cep">CEP:</label>
                <input type="text" name="cep" id="cep_endereco" value="<%= endereco.cep %>" required>
              </div>
              <div class="form-group">
                <label for="numero">Número:</label>
                <input type="text" name="numero" id="numero_endereco" value="<%= endereco.numero %>" required>
              </div>
              <div class="form-group">
                <label for="complemento">Complemento:</label>
                <input type="text" name="complemento" id="complemento_endereco" value="<%= endereco.complemento %>">
              </div>
              <div class="form-group">
                <label for="tipo_endereco">Tipo de Endereço:</label>
                <input type="text" name="tipo_endereco" id="tipo_endereco" value="<%= endereco.tipo %>">
              </div>
            
              <button type="submit">Salvar Alterações</button>
            </form>
            

        </section>
        
    </main>
</section>

  <%- include("../partial/footer") %>
  <script src="js/profile.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const cep = '<%= endereco.cep %>'; // Use o CEP do cliente
      if (cep) {
        fetch(`https://viacep.com.br/ws/${cep}/json/`)
          .then(response => response.json())
          .then(data => {
            if (!data.erro) {
              // Preenchendo os dados do endereço em um local específico
              const enderecoContainer = document.querySelector('.endereco-container');
              if (enderecoContainer) {
                enderecoContainer.innerHTML += `
                  <p><strong>Rua:</strong> ${data.logradouro}</p>
                  <p><strong>Bairro:</strong> ${data.bairro}</p>
                  <p><strong>Cidade:</strong> ${data.localidade}</p>
                  <p><strong>Estado:</strong> ${data.uf}</p>
                `;
              }
            } else {
              console.error("CEP não encontrado.");
            }
          })
          .catch(error => console.error("Erro ao buscar o endereço:", error));
      }
    });
    document.addEventListener("DOMContentLoaded", function() {
      const cep = '<%= endereco.cep %>'; // Use o CEP do cliente
      if (cep) {
        fetch(`https://viacep.com.br/ws/${cep}/json/`)
          .then(response => response.json())
          .then(data => {
            if (!data.erro) {
              // Preenchendo os dados do endereço em um local específico
              const enderecoContainer = document.querySelector('.endereco-containerPC');
              if (enderecoContainer) {
                enderecoContainer.innerHTML += `
                  <p><strong>Rua:</strong> ${data.logradouro}</p>
                  <p><strong>Bairro:</strong> ${data.bairro}</p>
                  <p><strong>Cidade:</strong> ${data.localidade}</p>
                  <p><strong>Estado:</strong> ${data.uf}</p>
                `;
              }
            } else {
              console.error("CEP não encontrado.");
            }
          })
          .catch(error => console.error("Erro ao buscar o endereço:", error));
      }
    });

    document.getElementById('form-endereco').addEventListener('submit', function(event) {
  event.preventDefault(); // Prevenir o envio padrão do formulário

  const form = event.target;
  const id = form.getAttribute('data-id'); // Obter o ID do endereço
  const cep_endereco = document.getElementById('cep_endereco').value;
  const numero_endereco = document.getElementById('numero_endereco').value;
  const complemento_endereco = document.getElementById('complemento_endereco').value;
  const tipo_endereco = document.getElementById('tipo_endereco').value;
  const id_cliente = document.querySelector('input[name="id_cliente"]').value; // Obter o ID do cliente

  // Fazer a requisição PUT para atualizar o endereço
  fetch(`api/enderecos/${id}`, {
    method: 'PUT',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ id_cliente, cep_endereco, numero_endereco, complemento_endereco, tipo_endereco }), // Enviar os dados como JSON
  })
    .then(response => response.json())
    .then(data => {
      if (data.message) {
        alert(data.message); // Exibir mensagem de sucesso
        window.location.reload(); // Recarregar a página para ver as atualizações
      }
    })
    .catch(error => {
      console.error('Erro ao atualizar o endereço:', error);
    });
});



  </script>
  

</body>
</html>
