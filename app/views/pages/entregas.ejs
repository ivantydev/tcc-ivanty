<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Obras Vendidas</title>
    <link rel="stylesheet" href="css/global.css">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/footer.css">
    <link rel="stylesheet" href="css/menu.css">
    <link rel="stylesheet" href="css/headerPC.css">
    <link rel="stylesheet" href="css/globalPC.css">
    <link rel="stylesheet" href="css/carousel.css">
    <link rel="stylesheet" href="css/categories.css">
    <link rel="stylesheet" href="css/entregas.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/simple-notify@0.6.1/dist/simple-notify.min.css">
</head>
<body>
    <section class="telasPequenas">
        <%- include("../partial/header") %>
        <section class="entregasAFazerMobile">
            <% if (obrasComClientes.length > 0) { %>
                <div class="obras-list">
                    <% obrasComClientes.forEach(obra => { %>
                        <div class="obra-item">
                            <div class="obra-info">
                                <img class="entrega_obra_imagem" src="<%= obra.detalhes_obra.imagem_obra %>" alt="<%= obra.detalhes_obra.titulo_obra%>">
                                <div>
                                    <p class="entrega_obra_titulo"><%= obra.detalhes_obra.titulo_obra %></p>
                                    <p class="entrega_obra_descricao"><%= obra.detalhes_obra.descricao_obra %></p>
                                    <p class="entrega_obra_endereco"><%= obra.endereco.logradouro %>, <%= obra.endereco.numero_endereco %>, <%= obra.endereco.bairro %>, <%= obra.endereco.localidade %>, <%= obra.endereco.uf %></p>
                                    <p class="entrega_obra_endereco"><strong>CEP:</strong> <%= obra.endereco.cep_endereco %></p>
                                </div>
                            </div>
    
                            <!-- Formulário para envio de prazo e dados adicionais -->
                            <form action="/entregas/enviar" method="POST" class="form-envio-entrega">
                                <input type="hidden" name="id_obra" value="<%= obra.id_obra %>">
                                <div class="form-group">
                                    <label for="prazo_entrega_<%= obra.id_obra %>">Prazo de Entrega</label>
                                    <input type="date" id="prazo_entrega_<%= obra.id_obra %>" name="prazo_entrega" required>
                                </div>
                                <div class="form-group">
                                    <label for="dados_adicionais_<%= obra.id_obra %>">Dados Adicionais</label>
                                    <textarea id="dados_adicionais_<%= obra.id_obra %>" name="dados_adicionais" rows="3" placeholder="Informações extras (opcional)"></textarea>
                                </div>
                                <button type="submit" class="btn-enviar-entrega">Enviar Informações</button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Nenhuma obra vendida encontrada.</p>
            <% } %>
        </section>
    
        <!-- Paginação -->
        <div class="paginationMobile">
            <a href="#">&#171; Anterior</a>
            <a href="#">Próxima &#187;</a>
        </div>
    </section>
    
    <section class="telasGrandes">
        <section class="entregasAFazerPC">
            <h1>Obras Vendidas</h1>
            <%- include("../partial/headerPC") %>
    
            <% if (obrasComClientes.length > 0) { %>
                <div class="obras-list">
                    <% obrasComClientes.forEach(obra => { %>
                        <div class="obra-item">
                            <div class="obra-info">
                                <img class="entrega_obra_imagem" src="<%= obra.detalhes_obra.imagem_obra %>" alt="<%= obra.detalhes_obra.titulo_obra %>">
                                <div>
                                    <p class="entrega_obra_titulo"><%= obra.detalhes_obra.titulo_obra %></p>
                                    <p class="entrega_obra_descricao"><%= obra.detalhes_obra.descricao_obra %></p>
                                    <p class="entrega_obra_endereco"><%= obra.endereco.logradouro %>, <%= obra.endereco.numero_endereco %>, <%= obra.endereco.bairro %>, <%= obra.endereco.localidade %>, <%= obra.endereco.uf %></p>
                                    <p class="entrega_obra_endereco"><strong>CEP:</strong> <%= obra.endereco.cep_endereco %></p>
                                </div>
                            </div>
    
                            <!-- Formulário para envio de prazo e dados adicionais -->
                            <form action="/entregas/enviar" method="POST" class="form-envio-entrega">
                                <input type="hidden" name="id_obra" value="<%= obra.id_obra %>">
                                <div class="form-group">
                                    <label for="prazo_entrega_<%= obra.id_obra %>">Prazo de Entrega</label>
                                    <input type="date" id="prazo_entrega_<%= obra.id_obra %>" name="prazo_entrega" required>
                                </div>
                                <div class="form-group">
                                    <label for="dados_adicionais_<%= obra.id_obra %>">Dados Adicionais</label>
                                    <textarea id="dados_adicionais_<%= obra.id_obra %>" name="dados_adicionais" rows="3" placeholder="Informações extras (opcional)"></textarea>
                                </div>
                                <button type="submit" class="btn-enviar-entrega">Enviar Informações</button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <p>Nenhuma obra vendida encontrada.</p>
            <% } %>
    
            <!-- Paginação -->
            <div class="pagination">
                <a href="#">&#171; Anterior</a>
                <a href="#">Próxima &#187;</a>
            </div>
        </section>
    </section>    
</body>
</html>
