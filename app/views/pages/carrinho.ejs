<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Carrinho de Compras</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Carrinho de Compras</h1>
  <table>
    <thead>
      <tr>
        <th>Produto</th>
        <th>Quantidade</th>
        <th>Preço Unitário</th>
        <th>Subtotal</th>
        <th>Remover</th>
      </tr>
    </thead>
    <tbody>
      <% if (carrinho.length > 0) { %>
        <% carrinho.forEach(item => { %>
            <tr>
                <td><%= item.titulo %></td>
                <td><%= item.quantidade %></td>
                <td>R$ <%= parseFloat(item.preco).toFixed(2) %></td>
                <td>R$ <%= (parseFloat(item.preco) * item.quantidade).toFixed(2) %></td>
                <td>
                    <form action="/api/carrinho/remover/<%= item.id_obra %>" method="POST">
                        <button type="submit">Remover</button>
                    </form>
                </td>
            </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5">Seu carrinho está vazio</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <% if (carrinho.length > 0) { %>
    <button id="checkout-btn">Finalizar Compra</button>
  <% } %>

  <a href="/">Continuar comprando</a>

  <script src="https://sdk.mercadopago.com/js/v2"></script>
  <script>
    const mp = new MercadoPago('APP_USR-db6503d3-deb4-4473-a4e8-58031d128996', { locale: 'pt-BR' });

    document.getElementById('checkout-btn')?.addEventListener('click', function() {
      fetch('/api/criar-pedido', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          metodoPagamento: 'cartao'
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.init_point) {
          window.location.href = data.init_point; // Redireciona para o link de pagamento
        } else {
          console.error('init_point não encontrado na resposta:', data);
        }
      })
      .catch(error => console.error('Erro ao criar pedido:', error));
    });
  </script>
</body>
</html>
