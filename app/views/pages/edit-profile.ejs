<section class="editProfileForm">
    <h2>Editar Perfil</h2>
    <form action="/update-profile/<%= cliente.id %>" method="POST">
        <label for="nome_cliente">Nome:</label>
        <input type="text" id="nome_cliente" name="nome_cliente" value="<%= cliente.nome_cliente %>">

        <label for="email_cliente">Email:</label>
        <input type="email" id="email_cliente" name="email_cliente" value="<%= cliente.email_cliente %>">

        <!-- Adicione outros campos de edição aqui -->

        <button type="submit">Salvar Alterações</button>
    </form>
</section>