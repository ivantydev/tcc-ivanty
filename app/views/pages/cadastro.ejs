<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teste</title>
    <link href="./css/CriarConta.css" rel="stylesheet">
    <!-- Fonte Usada -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Seção para telas pequenas (mobile) -->
    <section class="telasPequenas">
        <div class="grid">
            <div class="b">
                <form id="cadastroForm" action="/api/clientes" method="POST">
                    <h1>IVANTY</h1>
                        
                    <div class="input-group">
                        <label for="user-type">Escolha o tipo:</label>
                        <select id="user-type" name="tipo_cliente" required>
                            <option value="">Selecione uma opção</option>
                            <option value="artista">Artista</option>
                            <option value="cliente">Cliente</option>
                        </select>
                        <span class="erro" id="erroTipo"></span>
                    </div>
    
                    <div class="input-group">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome_cliente" placeholder="Digite o seu nome completo" required>
                        <span class="erro" id="erroNome"></span>
                    </div>
        
                    <div class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email_cliente" placeholder="Digite o seu email" required>
                        <span class="erro" id="erroEmail"></span>
                    </div>
    
                    <div class="input-group">
                        <label for="perfil_cliente">Nome de usuário</label>
                        <input type="text" id="perfil_cliente" name="perfil_cliente" placeholder="Digite o seu nome de usuário" required>
                        <span class="erro" id="erroNomeUsuario"></span>
                    </div>
        
                    <div class="input-group">
                        <label for="telefone">Telefone</label>
                        <input type="tel" id="telefone" name="telefone_cliente" placeholder="Digite o seu telefone" required>
                        <span class="erro" id="erroTelefone"></span>
                    </div>
        
                    <div class="input-group">
                        <label for="none">CPF</label>
                        <input type="text" name="cpf_cliente" id="strCPF" size="30" maxlength="11" placeholder="Digite seu CPF" required>
                        <span class="erro" id="erroCpf"></span>
                    </div>
    
                    <div class="input-group">
                        <label for="dataNascimento">Data de nascimento</label>
                        <input type="date" id="datanasc_cliente" name="datanasc_cliente" required>
                        <span class="erro" id="erroDataNascimento"></span>
                    </div>
                    
                    <div class="input-group">
                        <label for="senha">Senha</label>
                        <input type="password" id="senha" name="senha_cliente" placeholder="Digite sua senha" required>
                        <span class="erro" id="erroSenha"></span>
                    </div>
    
                    <div class="input-group">
                        <label for="Confirmarsenha">Confirmar Senha</label>
                        <input type="password" id="Confirmarsenha" placeholder="Confirme a senha" required>
                        <span class="erro" id="erroConfirmarsenha"></span>
                    </div>
                    
                    <div class="input-group">
                        <button type="submit" onclick="verificaCPF(document.getElementById('strCPF').value)">Cadastrar</button>
                    </div>
                </form>
                        
            </div>
        </div> 
    </section>
    
    <!-- Seção para telas grandes (desktop) -->
    <section class="telasGrandes">
        <div class="grid">
            <div class="a">
                <img class="Promocional" src="./images/mocaPintandoIvanty.png" alt="Mulher artista pintando o logo da Ivanty">
            </div>
            <div class="b">
                <form id="cadastroForm" action="/api/clientes" method="POST">
                    <h1>IVANTY</h1>

                    <div class="input-group">
                        <label for="user-type">Escolha o tipo:</label>
                        <select id="user-type" name="tipo_cliente" required>
                            <option value="">Selecione uma opção</option>
                            <option value="artista">Artista</option>
                            <option value="cliente">Cliente</option>
                        </select>
                        <span class="erro" id="erroTipo"></span>
                    </div>

                    <div class="input-group">
                        <label for="nome">Nome</label>
                        <input type="text" id="nome" name="nome_cliente" placeholder="Digite o seu nome completo" required>
                        <span class="erro" id="erroNome"></span>
                    </div>

                    <div class="input-group">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" name="email_cliente" placeholder="Digite o seu email" required>
                        <span class="erro" id="erroEmail"></span>
                    </div>

                    <div class="input-group">
                        <label for="perfil_cliente">Nome de usuário</label>
                        <input type="text" id="perfil_cliente" name="perfil_cliente" placeholder="Digite o seu nome de usuário" required>
                        <span class="erro" id="erroNomeUsuario"></span>
                    </div>

                    <div class="input-group">
                        <label for="telefone">Telefone</label>
                        <input type="tel" id="telefone" name="telefone_cliente" placeholder="Digite o seu telefone" required>
                        <span class="erro" id="erroTelefone"></span>
                    </div>

                    <div class="input-group">
                        <label for="cpf">CPF</label>
                        <input type="text" name="cpf_cliente" id="strCPF" size="30" maxlength="11" placeholder="Digite seu CPF" required>
                        <span class="erro" id="erroCpf"></span>
                    </div>

                    <div class="input-group">
                        <label for="dataNascimento">Data de nascimento</label>
                        <input type="date" id="datanasc_cliente" name="datanasc_cliente" required>
                        <span class="erro" id="erroDataNascimento"></span>
                    </div>
                    
                    <div class="input-group">
                        <label for="senha">Senha</label>
                        <input type="password" id="senha" name="senha_cliente" placeholder="Digite sua senha" required>
                        <span class="erro" id="erroSenha"></span>
                    </div>

                    <div class="input-group">
                        <label for="Confirmarsenha">Confirmar Senha</label>
                        <input type="password" id="Confirmarsenha" placeholder="Confirme a senha" required>
                        <span class="erro" id="erroConfirmarsenha"></span>
                    </div>
                    
                    <div class="input-group">
                        <button type="submit" onclick="verificaCPF(document.getElementById('strCPF').value)">Cadastrar</button>
                    </div>
                </form>
            </div>
        </div>
    </section> 

    <script src="./js/validate.js"></script>
    <script src="./js/cpfValidacao.js"></script>
</body>
</html>
