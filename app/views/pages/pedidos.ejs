<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Seus Pedidos</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Seus Pedidos</h1>

  <table>
    <thead>
      <tr>
        <th>ID do Pedido</th>
        <th>Status</th>
        <th>Data</th>
        <th>Valor Total</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (pedidos.length > 0) { %>
        <% pedidos.forEach(pedido => { %>
          <tr>
            <td><%= pedido.id_pedido %></td>
            <td><%= pedido.status_pedido %></td>
            <td><%= new Date(pedido.data_pedido).toLocaleDateString() %></td>
            <td>R$ <%= pedido.preco_total %></td>
            <td>
              <a href="/pedido/<%= pedido.id_pedido %>">Ver Detalhes</a>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5">Nenhum pedido encontrado</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <a href="/">Voltar</a>
</body>
</html>
